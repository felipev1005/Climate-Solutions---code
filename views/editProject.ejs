<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Project</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>
  <%- include('partials/navbar', {page: '' }) %>
  <div class="container mx-auto my-8">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Project: <%= project.title %></h1>
          <p class="py-6">Use the below form to update the Project details.</p>
        </div>
      </div>
    </div>
    <form action="/solutions/editProject" method="POST" class="p-6 bg-base-200 rounded-lg">
      <input type="hidden" name="id" value="<%= project.id %>">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <label for="title" class="block text-sm font-medium mb-2">Title</label>
          <input type="text" id="title" name="title" value="<%= project.title %>" class="input input-bordered w-full" required>
        </div>
        <div>
          <label for="feature_img_url" class="block text-sm font-medium mb-2">Feature Image (URL)</label>
          <input type="url" id="feature_img_url" name="feature_img_url" value="<%= project.feature_img_url %>" class="input input-bordered w-full" required>
        </div>
        <div>
          <label for="sector_id" class="block text-sm font-medium mb-2">Sector</label>
          <select id="sector_id" name="sector_id" class="select select-bordered w-full" required>
            <% sectors.forEach(sector => { %>
              <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? "selected" : "" %>><%= sector.sector_name %></option>
            <% }) %>
          </select>
        </div>
        <div>
          <label for="intro_short" class="block text-sm font-medium mb-2">Intro</label>
          <textarea id="intro_short" name="intro_short" class="textarea textarea-bordered w-full" required><%= project.intro_short %></textarea>
        </div>
        <div>
          <label for="summary_short" class="block text-sm font-medium mb-2">Short Summary</label>
          <textarea id="summary_short" name="summary_short" class="textarea textarea-bordered w-full" required><%= project.summary_short %></textarea>
        </div>
        <div>
          <label for="impact" class="block text-sm font-medium mb-2">Impact</label>
          <textarea id="impact" name="impact" class="textarea textarea-bordered w-full" required><%= project.impact %></textarea>
        </div>
        <div>
          <label for="original_source_url" class="block text-sm font-medium mb-2">Original Source (URL)</label>
          <input type="url" id="original_source_url" name="original_source_url" value="<%= project.original_source_url %>" class="input input-bordered w-full" required>
        </div>
      </div>
      <div class="flex justify-between mt-6">
        <button type="submit" class="btn btn-primary">Update Project</button>
        <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error">Delete Project</a>
      </div>
    </form>
  </div>
</body>
</html>
