<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', { page: '' }) %>

    <div class="container mx-auto my-8">
        <div class="hero bg-base-200 p-6 rounded-lg">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold"><%= project.title %></h1>
                    <p class="mt-4">Below, you will find detailed information about the project: <%= project.title %></p>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-12">
            <div class="mt-8">
                <img class="rounded-lg" src="<%= project.feature_img_url %>" alt="<%= project.title %>">
            </div>
            <div class="mt-8">
                <p><%= project.intro_short %></p>
                <h3 class="text-lg font-semibold mt-4">Impact:</h3>
                <p><%= project.impact %></p>
                <br>
                <a href="<%= project.original_source_url %>" class="btn btn-primary mt-4" target="_blank">More Information</a>
                <br>
                <br>
                <a href="#" onclick="history.back(); return false;" class="btn btn-primary">Go Back</a>
            </div>
        </div>

        <div id="quoteSection" class="mt-12">
            <blockquote id="quote" class="italic"></blockquote>
            <p id="author" class="text-right font-bold"></p>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            fetch("https://dummyjson.com/quotes/random")
                .then(response => response.json())
                .then(data => {
                    document.getElementById('quote').textContent = `"${data.quote}"`;
                    document.getElementById('author').textContent = `- ${data.author}`;
                });
        });
    </script>
</body>
</html>
